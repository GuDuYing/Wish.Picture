
@{
    ViewData["Title"] = "图片库";
}
<link rel="stylesheet" type="text/css" href="css/normalize.css" />
<link rel="stylesheet" type="text/css" href="css/default.css">
<link rel="stylesheet" href="css/swipebox.css">
<style>
    #box-container {
        margin: 0;
        padding: 0;
    }

    .box {
        list-style-type: none;
        float: left;
        margin-bottom: 1rem;
        margin-left: 1%;
        margin-right: 1%;
        width: 48%;
    }

    .box:nth-child(2n+1) {
        clear: both;
        margin-left: 0;
    }

    .box:nth-child(2n+0) {
        margin-right: 0;
    }

    .box a {
        display: block;
        width: 100%;
        height: auto;
    }

    .box a img {
        -webkit-back-visibility: hidden;
        display: block;
        width: 100%;
        height: auto;
        vertical-align: bottom;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">标签</div>
        <div class="col-md-8">
            <div class="wrap small-width">
                <div id="try"></div>
                <ul id="box-container">
                    @{
                        var pictureListModel = ViewData["PictureList"];
                        if (pictureListModel != null)
                        {
                            var pictureList = pictureListModel as List<Picture>;

                            foreach (var picture in pictureList)
                            {
                                <li class="box">
                                    <a href="@picture.PictureUrl" class="swipebox" title="@picture.PictureName">
                                        <img src="@picture.PictureUrl" alt="image">
                                    </a>
                                </li>
                            }

                        }
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <a asp-controller="Picture" asp-action="Upload">上传图片</a>
        </div> 
    </div>
</div>

<script src="~/js/ios-orientationchange-fix.js"></script>

<script src="~/js/jquery.swipebox.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        /* Basic Gallery */
        $('.swipebox').swipebox();

        /* Video */
        $('.swipebox-video').swipebox();



    });
</script>
